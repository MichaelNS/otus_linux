# server_name: "example.com"
server_name: "site.project"


# Variables listed here are applicable to all host groups

# MySQL settings
mysqlservice: mysqld
mysql_port: 3306

# These are the WordPress database settings
wp_db_server_ip: 192.168.30.3
wp_server_ip: 192.168.20.2
wp_db_name: wordpress
wp_db_user: wordpress
wp_db_password: secret
wp_home_dir: /var/www/{{ server_name }}/wordpress


  # - listen: "443 ssl http2"

# nginx_user: root

nginx_vhosts:
  - listen: "80"
    # listen: "443 ssl"
    server_name: "{{ server_name }}"
    server_name_redirect: "www.{{ server_name }}"
    root: "/var/www/{{ server_name }}/wordpress"
    # index: "index.php index.html index.htm"
    # error_page: "500 502 503 504  /50x.html"
    access_log: "/var/log/nginx/{{ server_name }}.access.log  main"
    error_log: "/var/log/nginx/{{ server_name }}.error_log"
    state: "present"
    template: "{{ nginx_vhost_template }}"
    filename: "{{ server_name }}.conf"
    extra_parameters: |
      location / {
          root /var/www/{{ server_name }}/wordpress;
          index index.php;
          try_files $uri $uri/ @fallback;
      }
      location ~*
          \.(jpeg|ico|jpg|gif|png|css|js|pdf|txt|tar|gz|wof|csv|zip|xml|yml) {
          access_log off;
          try_files $uri @statics;
          expires 14d;
          add_header Access-Control-Allow-Origin *;
          add_header Cache-Control public;
          root /var/www/site.project/html;
      }
      location @statics {
          rewrite ^/(\w+)/(.*)$ /$2 break;
          access_log off;
          rewrite_log off;
          expires 14d;
          add_header Cache-Control public;
          add_header Access-Control-Allow-Origin *;
          root /var/www/site.project/html;
      }
      location ~ \.php$ {
          root /var/www/{{ server_name }}/wordpress;
          fastcgi_split_path_info ^(.+\.php)(/.+)$;
          fastcgi_pass unix:{{ php_fpm_listen }};
          fastcgi_index index.php;
          fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
          include fastcgi_params;
      }

